<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="false"
    android:layout_alignParentTop="false"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/register_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="5dp"
                android:text="EDITOR DEMO"
                android:textColor="@color/f5f5f5"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnRender"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:height="35dp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:text="Render"
                android:textColor="@color/f5f5f5"
                android:textSize="@dimen/large_text" />

            <Button
                android:id="@+id/btn_register_board_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="post_to_server"
                android:text="글쓰기" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/register_social_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/social_survey_question_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right|end"
        android:layout_margin="16dp"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_baseline_add_24" />


</FrameLayout>